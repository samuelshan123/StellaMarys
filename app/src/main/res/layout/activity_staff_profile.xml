<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff_profile">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/roman"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:id="@+id/name"
                android:layout_height="wrap_content"
                android:text="Name                     : "
                android:textSize="20dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr Pon Parthiban"
                android:layout_toRightOf="@+id/name"
                android:id="@+id/nameView"
                android:textSize="20dp"
                />
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/name"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="College mail Id     : "
                android:id="@+id/reg"
                android:textSize="20dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ponparthee@stellamaryscoe.edu.in"
                android:layout_below="@+id/nameView"
                android:layout_toRightOf="@+id/reg"
                android:id="@+id/regView"
                android:textSize="20dp"
                />
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/reg"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department          : "
                android:textSize="20dp"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CSE"
                android:textStyle="bold"
                android:layout_below="@+id/regView"
                android:layout_toRightOf="@+id/reg"
                android:id="@+id/departView"
                android:textSize="20dp"
                />

        </RelativeLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view student details"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>


    </LinearLayout>

</ScrollView>